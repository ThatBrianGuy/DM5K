<AuthorizeView>
    <Authorized>
        <p>@context.User.Identity.Name</p>
        <form method="post" action="Identity/Account/LogOut">
            <a class="button" aria-current="page" href="Identity/Account/Manage">Manage</a>
            <button type="submit" class="button-primary">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a class="button" href="Identity/Account/Register">Register</a>
        <a class="button button-primary" href="Identity/Account/Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>
